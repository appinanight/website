<!DOCTYPE html>
<html lang="{{ kirby.languageCode | default('nl') }}">
	<head>

		{{ page().metaTags() | raw }}

		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1"/>

		{# 
			Generate a Favicon package at https://realfavicongenerator.net/
		#}

		{% block preload %}
			<link rel="preconnect" href="https://fonts.googleapis.com">
			<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
			<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
			<link rel="preload" href="{{ asset_manifest('scss/fonts/EudoxusSans-Bold.woff') }}" as="font" crossorigin>
			<link rel="preload" href="{{ asset_manifest('scss/fonts/EudoxusSans-Bold.woff2') }}" as="font" crossorigin>
		{% endblock %}


		{{ manifest_js('main.js', {defer:true} ) }}

		{{ manifest_css('main.css') }}

	</head>
	<body class="{{ 'template--' ~ page.intendedTemplate }} {% block bodyClass %}{% endblock %}">
		
		{% include '@snippets/header.twig' %}
		
		{% block content %}{% endblock %}

		{% include '@snippets/footer.twig' %}


		{% if is_production_environment() %}
			<!-- GOOGLE ANALYTICS -->
		{% endif %}
	</body>
</html>
